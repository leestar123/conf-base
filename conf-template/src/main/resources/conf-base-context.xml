<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<import resource="classpath:urule-console-context.xml"/>
	
	<bean parent="urule.props">
		<property name="location" value="application.properties" />
	</bean>
	
	<bean id="nodeService" class="com.conf.template.service.NodeService"/>
	
	<bean id="confBaseService" class="com.conf.template.service.ConfBaseService"/>
	
	<bean id="confFlowService" class="com.conf.template.service.ConfFlowService"/>
	
	<bean id="confStepService" class="com.conf.template.service.ConfStepService"/>
	
	<bean id="confUruleService" class="com.conf.template.service.ConfUruleService"/>
	
	<bean id="eventListener" class="com.conf.template.process.QualificationInvokerAopProcess" ></bean>
	
	<bean id="invokerService" class="com.conf.client.RuleInvokerService">
		<property name="repositoryService" ref="urule.repositoryService"></property>
		<property name="knowledgeBuilder" ref="urule.knowledgeBuilder"></property>
		<property name="httpSessionKnowledgeCache" ref="urule.httpSessionKnowledgeCache"></property>
		<property name="knowledgeService" ref="urule.knowledgeService"></property>
		<property name="knowledgeEventListener" ref="eventListener"></property>
	</bean>
	
	<bean id="confNodeCtroller" class="com.conf.template.controller.ConfNodeController">
		<property name="nodeService" ref="nodeService"></property>
<!-- 		<property name="invokerService" ref="invokerService"></property>	 -->
	</bean>
	
	<bean id="confBaseCtroller" class="com.conf.template.controller.ConfBaseController"/>
	
	<bean id="httpAopProcess" class="com.conf.template.process.DefaultHttpAopProcess"/>
	
	<bean id="invokerAopProcess" class="com.conf.template.process.QualificationInvokerAopProcess"/>
	
	<bean id="annotationParsing" class="com.conf.template.scan.AnnotationParsing"/>
	
	<bean id="confBeanService" class="com.conf.template.service.ConfBeanService"/>
	
	<bean id="propertyConf" class="com.conf.common.PropertyConf">
		<property name="scanPackageName" value="${scan.package.name}"></property>
	</bean>
	
	<bean id="scanMgrImpl" class="com.conf.template.scan.impl.ScanMgrImpl" scope="singleton" init-method="firstScan">
		<property name="annotationParsing" ref="annotationParsing"></property>
		<property name="property" ref="propertyConf"></property>
		<property name="confBeanService" ref="confBeanService"></property>
	</bean>

	<bean id="invokerDebugWriter" class="com.conf.template.process.InvokerDebugWriter" />
	
	<bean id="fileProcess" class="com.conf.template.process.DefaultFileProcessImpl">
		<property name="ip" value="${process.ip}"></property>
		<property name="port" value="${process.port}"></property>
		<property name="readService" value="${process.read.url}"></property>
		<property name="writeService" value="${process.write.url}"></property>
		<property name="commitInterval" value="${process.commit.interval}"></property>
	</bean>
	
	<bean id="fileExecutor" class="org.conf.application.FileThreadPoolExecutor" scope="singleton" init-method="init">
		<property name="corePoolSize" value="${process.corePoolSize}"></property>
		<property name="keepAliveTime" value="${process.keepAliveTime}"></property>
	</bean>
</beans>